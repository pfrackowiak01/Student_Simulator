<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dusty_background"
    tools:context=".MenuActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sklepik"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Odblokuj nowy wyglÄ…d lub ulepszenia!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/pieniadzeText"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Posiadasz "
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/monsterShop"
                        android:layout_width="177dp"
                        android:layout_height="297dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/pixel_monster_gold" />

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/kupText1"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:text="Mango Loco"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/kupText"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:textSize="16dp"
                            android:text="Cena: 200 zl"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/kup1"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="Kup" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/black"
                android:dividerHeight="2dp"
                android:layout_marginTop="10dp"
                android:listSelector="@color/purple_500" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>